// 69. Sqrt(x)

class Solution {
public:
    int mySqrt(int x) {
        int l = 0, r = x;
        
        if(x<2)
            return x;
            
        while(l<=r){
            long mid = (l+r)/2;
            
            if(mid*mid == x)
                return mid;
            
            if(mid*mid < x)
                l = mid+1;
            else 
                r = mid-1;
        }
        return r;
    }
};
